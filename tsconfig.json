{
  "compilerOptions": {
    /* Type checking */
    "strict": true,

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./src",

    /* Language and Environment */
    "target": "es6",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./lib",

    /* Interop Constraints */
    "esModuleInterop": true
  },
  "exclude": [
    "src/**/*.test.ts",
  ],
  "include": ["./src"]
}
