  "license": "MIT",
  "devDependencies": {
    "@types/inflection": "^1.13.0",
    "@types/jest": "^27.0.0",
    "@types/jsonld": "^1.5.0",
    "@types/lodash.get": "^4.4.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^8.0.0",
